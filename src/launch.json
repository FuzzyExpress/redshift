{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Redshift",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/src/redshift",
      "args": ["-O", "20000"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build"
    }
  ]
}
